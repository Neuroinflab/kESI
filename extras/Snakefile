LFCOR_SOLVE_ELE = LFCOR_ELE_PATTERN.format(setup="{SETUP}")
LFCOR_SOLVE_COND = LFCOR_COND_PATTERN.format(setup="{SETUP}",
                                             model="{GEOMETRY}__{CONDUCTIVITY}")
LFCOR_SOLVE_DIR_PATTERN = LFCOR_DIR_PATTERN.format(setup="{{SETUP}}",
                                                   model="{model}",
                                                   mesh="{mesh}",
                                                   degree="{{DEGREE}}")
LFCOR_SOLVE_DIR_paper_spheres = LFCOR_SOLVE_DIR_PATTERN.format(
                              model="{GEOMETRY,.+_sphere.*}__{CONDUCTIVITY}",
                              mesh="{SUFFIX}__{MESH}")


rule LFCOR_SOLVE_paper_spheres:
    input:
        ELECTRODES=LFCOR_SOLVE_ELE,
        MESH_PATH=f"{MESH_DIR}{{GEOMETRY}}__{{SUFFIX}}/{{MESH}}.xdmf",
        CONFIG=LFCOR_SOLVE_COND
    output:
        os.path.join(LFCOR_SOLVE_DIR_paper_spheres,
                     '{NAME}.h5'),
        METADATA=os.path.join(LFCOR_SOLVE_DIR_paper_spheres,
                              '{NAME}.ini')
    resources:
        mem_mb=get_mem_mb_exponential(15_000)
    shell:
        """
        ulimit -v $(({resources.mem_mb} * 1024))
        python solve_sphere_on_plate.py \
          --mesh {input.MESH_PATH} \
          --degree {wildcards.DEGREE} \
          --config {input.CONFIG} \
          --grounded-plate-edge-z -0.088 \
          --electrodes {input.ELECTRODES} \
          --name {wildcards.NAME} \
          --output {output.METADATA}
        """


def setup_to_electrodes(wildcards):
    prefix = os.path.join(ELE_DIR,
                          *wildcards.setup.split('__'))
    return f"{prefix}.ini"


rule LFCOR_ELE_CSV:
    input:
        setup_to_electrodes
    output:
        LFCOR_ELE_PATTERN
    run:
        import configparser
        import pandas as pd

        os.makedirs(os.path.dirname(str(output)),
                    mode=0o755,
                    exist_ok=True)

        config = configparser.ConfigParser()
        config.read(str(input))

        DF = []
        for name in config.sections():
            DF.append({'NAME': name,
                       'X': config.getfloat(name, 'x'),
                       'Y': config.getfloat(name, 'y'),
                       'Z': config.getfloat(name, 'z'),
                       })
        pd.DataFrame(DF).to_csv(str(output),
                                index=False)


rule LFCOR_COND_INI:
    input:
        f"{PROP_DIR}{{MODEL}}.ini"
    output:
        LFCOR_COND_PATTERN.format(setup="{SETUP}",
                                  model="{MODEL}")
    shell:
        f"""
        mkdir -p {LFCOR_ROOT}{{wildcards.SETUP}}/{{wildcards.MODEL}}
        cp {{input}} {{output}}
        """


