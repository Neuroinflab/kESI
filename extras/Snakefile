# snakemake .4SM_CSF_3_mm__uniform_coarser_1_comb -j 4 --resources mem_mb=100000 --restart-times 3
import os

DATA_DIR = "data/"
PROP_DIR = "FEM/model_properties/"
ELE_DIR = "FEM/electrode_locations/"

MESH_SRC_DIR = "FEM/meshes/"
MESH_DIR = f"{DATA_DIR}meshes/"
MESH_GEO_PATTERN = os.path.join(MESH_DIR,
                                "{mesh_name}",
                                "{granularity}.geo")

LFCOR_ROOT = os.path.join(DATA_DIR,
                          "fenics_leadfield_corrections")
LFCOR_ELE_PATTERN = os.path.join(LFCOR_ROOT,
                                 "{setup}/electrodes.csv")
LFCOR_COND_PATTERN = os.path.join(LFCOR_ROOT,
                                  "{setup}/{model}/conductivity.ini")
LFCOR_DIR_PATTERN = os.path.join(LFCOR_ROOT,
                                 "{setup}/{model}/{mesh}/{degree}/")


