rule paper_4SM_trigger:
    input:
        [f"{DATA_DIR}paper/four_spheres_{{{{GEOMETRY}}}}/{{{{MESH}}}}/{{{{DEGREE}}}}/sampled/9/{{}}_{{:02d}}.npz".format(x, z) for x in ['B', 'D'] for z in range(0, 12)]
    output:
        ".paper_four_spheres_{GEOMETRY}_{MESH}_{DEGREE,\d}"
    shell:
        "touch {output}"


