def get_mem_mb(wildcards, attempt):
    return 1_000 if attempt == 1 else (10_000 * 2 ** (attempt))

def get_mem_mb_exponential(base_mem=12_500):
    def f(wildcards, attempt):
        return base_mem * 2 ** (attempt - 1)
    return f


